<div class="back-link"><%= link_to '<< Back to All Items', items_path %></div>

<% if notice %>
  <div class="alert-box success radius"><%= notice %></div>
<% end %>

<h1>
  <%= @item.name %>
</h1>
<div class="small-4 columns">
  <%= image_tag @item.image_url, class: "featured" %>
</div>
<div class="small-4 columns">
  <p>
    <%= @item.description %>
  </p>

  <p>
    Starting price:
    <%= number_to_currency(@item.starting_price) %>
  </p>

  <h3>Highest bid</h3>
  <div id="high-bid-container">
    <%= render 'bids/highest_bid', locals:{item: @item} %>
  </div>


  <h3>Your Bid</h3>
  <div id="create-bid-container">
    <%= render partial: '/bids/create_bid', locals:{item: @item} %>
  </div>
<div class="small-4 columns">
</div>
